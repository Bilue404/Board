<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_main_bg"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >



    <include layout="@layout/toolbar_main"></include>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/main_logo_root"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


                <Button
                    android:id="@+id/main_creatroom"

                    android:layout_marginTop="40dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="新建会议"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/new_button"
                    android:textSize="24sp"
                    />




            <Button
                android:id="@+id/main_creathistory"
                android:text="查看历史"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:layout_alignLeft="@+id/main_creatroom"
                android:layout_below="@+id/main_creatroom"
                android:layout_marginTop="10dp"
                android:background="@drawable/other_button"
                />






            <Button
                android:id="@+id/main_joinroom"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:text="加入会议"
                android:layout_alignRight="@+id/main_creatroom"
                android:layout_below="@+id/main_creatroom"
                android:layout_marginTop="10dp"
                android:background="@drawable/other_button"
                />


            <Button
                android:id="@+id/mymain_historyroom"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:text="新建历史会议"
                android:layout_alignLeft="@+id/main_creatroom"
                android:layout_below="@+id/main_joinroom"
                android:layout_marginTop="10dp"
                android:background="@drawable/other_button"
                />


            <Button
                android:id="@+id/main_quite"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:text="退出"
                android:layout_alignRight="@+id/main_creatroom"
                android:layout_below="@+id/main_joinroom"
                android:layout_marginTop="10dp"
                android:background="@drawable/other_button"
                />





        </RelativeLayout>

    </LinearLayout>






</LinearLayout>