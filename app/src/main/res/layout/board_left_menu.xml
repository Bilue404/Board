<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <ImageView 
        android:id="@+id/left_menu_linepath"
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:background="@drawable/linepathed"
        />
    <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         />
     <ImageView 
        android:id="@+id/left_menu_line"
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:background="@drawable/line"
        />
     <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         />
    <ImageView
        android:id="@+id/left_menu_square"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/square"
        />
    <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         />
    <ImageView 
        android:id="@+id/left_menu_circular"
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:background="@drawable/circular"
        />
    <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         />
    <ImageView 
        android:id="@+id/left_menu_eraser"
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:background="@drawable/eraser"
        />
    <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         />
    <ImageView 
        android:id="@+id/left_menu_save"
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:background="@drawable/save"
        />
    <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         />

</LinearLayout>
